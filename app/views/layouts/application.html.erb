<!DOCTYPE html>
<html>
<head>
  <title>GUEF</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<span>
	<%= image_tag("logo.png", :size => "250x100") %>
	</span>
<body>
	
	<div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
		<%= yield %>
	</div>
	<%= render 'layouts/footer' %>

</body>
</html>
